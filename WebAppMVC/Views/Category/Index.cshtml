@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model IEnumerable<WebAppMVC.Models.Category>
@{
    ViewData["Title"] = "Index";
    
}

<div class="container p-3">
    
    <div class="row pt4">
        <div class="col-6">
            
            <h2 class="text-primary">Category list Entity Framework</h2>
            
        </div>
        <div class="col-6">
            Create new category
        </div>
        <br/>
        <br/>
        @if (Model.Count() > 0)
        {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
            <tr>
                <th>Category name</th>
                <th>Display order</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td style="width:50%">@obj.Name</td>
                    <td style="width:30%">@obj.DisplayOrder</td>
                    <td>Add/Remove</td>
                </tr>
            }
            </tbody>
        </table>                    
        }
        else
        {
            <p>No category in DB</p>    
        }
        
        
    </div>
    
    
</div>



